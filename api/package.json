{
  "name": "odontopro-api",
  "version": "0.1.0",
  "private": true,
  "description": "OdontoPRO API (NestJS) â€“ compartilhando Prisma com Next.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate:prisma": "prisma generate --schema=../prisma/schema.prisma",
    "openapi:json": "prisma generate --schema=../prisma/schema.prisma && node -r ts-node/register -r tsconfig-paths/register src/generate-swagger.ts",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --runInBand --testPathPattern=src/.*\\.spec\\.ts$",
    "test:e2e": "cross-env SKIP_PRISMA_CONNECT=1 OPENAPI_ONLY=1 SKIP_METRICS=1 jest --runInBand --testPathPattern=test/.*\\.e2e-spec\\.ts$",
    "postinstall": "prisma generate --schema=../prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.7",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.7",
    "@nestjs/platform-express": "^10.4.7",
    "@nestjs/swagger": "^7.4.2",
    "@opentelemetry/auto-instrumentations-node": "^0.53.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.55.0",
    "@opentelemetry/resources": "^1.25.1",
    "@opentelemetry/sdk-node": "^0.55.0",
    "@opentelemetry/semantic-conventions": "^1.25.1",
    "@prisma/client": "^6.16.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "prom-client": "^15.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^10.1.2",
    "@nestjs/testing": "^10.4.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^6.16.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  }
}
